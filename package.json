{
  "name": "ms",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "standardx && standardx **/*.ts",
    "lint:fix": "standardx --fix && standardx --fix **/*.ts"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "rules": {
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "ignore": [
      "**/dist/"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.30",
    "@types/bson": "^4.0.2",
    "@types/cls-hooked": "^4.3.0",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "husky": "^1.2.0",
    "jest": "^23.1.0",
    "jm-rollup": "^0.0.3",
    "lerna": "^3.22.0",
    "lint-staged": "^8.1.0",
    "standardx": "^5.0.0",
    "typescript": "^3.8.3"
  }
}
